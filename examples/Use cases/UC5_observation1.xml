<?xml version="1.0" encoding="UTF-8"?>
<om:OM_Observation
    gml:id="useCase-1.1"
    xmlns:om="http://www.opengis.net/om/2.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:xlink="http://www.w3.org/1999/xlink"
    xmlns:swe="http://www.opengis.net/swe/2.0"
    xmlns:cs="http://www.opengis.net/cs/1.0"
    xmlns:gml="http://www.opengis.net/gml/3.2"
    xmlns:gmd="http://www.isotc211.org/2005/gmd"
    xmlns:gco="http://www.isotc211.org/2005/gco"
    xsi:schemaLocation="http://www.opengis.net/om/2.0 http://schemas.opengis.net/om/2.0/observation.xsd">
    <gml:description>Use case 5: home weather station</gml:description>
    <gml:name>home weather station</gml:name>
    <om:type xlink:href="http://www.opengis.net/def/observationType/citizenscience/1.0/HumanObservation"/>
    <om:phenomenonTime>
        <gml:TimeInstant
            gml:id="otime1">
            <gml:timePosition>2015-06-29T12:02:00+02:00</gml:timePosition>
        </gml:TimeInstant>
    </om:phenomenonTime>
    <om:resultTime
        xlink:href="#otime1"/>
    <om:procedure>
        <cs:CrowdSourcingProcess>
            <cs:samplingProtocol>home weather station monitoring</cs:samplingProtocol>
            <cs:recordedBy>
                <cs:CitizenScientist>
                    <gmd:individualName>
                        <gco:CharacterString>Ingo Simonis</gco:CharacterString>
                    </gmd:individualName>
                    <gmd:role>
                        <gmd:CI_RoleCode 
                            codeList="http://link.to/codelist"
                            codeListValue="CI_RoleCode_publisher">publisher</gmd:CI_RoleCode>
                    </gmd:role>
                    <cs:experience>high</cs:experience>
                </cs:CitizenScientist>
            </cs:recordedBy>
            <cs:sensor xlink:href="http://link.to/weatherStation"/>        
        </cs:CrowdSourcingProcess>
    </om:procedure>
    <om:observedProperty
        xlink:href="http://controlled.vocab/weather"/>
    <om:featureOfInterest
        xlink:href="http://wfs.example.org?request=getFeature&amp;featureid=MyHome"/>
    <om:result>	
        <cs:SWEResult>
            <cs:eventRemarks>first day after heavy rain period</cs:eventRemarks>
            <cs:location>
                <gml:Point
                    gml:id="ObservationPoint">
                    <gml:pos srsName="urn:ogc:def:crs:EPSG:4326">61.9 6.152</gml:pos>
                </gml:Point>
            </cs:location>
            <swe:DataRecord>
                <swe:field name="temperature">
                    <swe:Quantity definition="http://mmisw.org/ont/cf/parameter/air_temperature">
                        <swe:label>Air Temperature</swe:label>
                        <swe:uom xlink:href="Cel"/>
                        <swe:value>12.21</swe:value>
                    </swe:Quantity>
                </swe:field>
                <swe:field name="pressure">
                    <swe:Quantity definition="http://mmisw.org/ont/cf/parameter/air_pressure_at_sea_level">
                        <swe:label>Atmospheric Pressure</swe:label>
                        <swe:uom code="mbar"/>
                        <swe:value>987</swe:value>
                    </swe:Quantity>
                </swe:field>
                <swe:field name="windspeed">
                    <swe:Quantity definition="http://link.to/windspeed">
                        <swe:uom code="m/s"/>
                        <swe:value>12.1</swe:value>
                    </swe:Quantity>
                </swe:field>
            </swe:DataRecord>
        </cs:SWEResult>
    </om:result>
</om:OM_Observation>
